#include <stdio.h>

void afficherMenu() {
printf("\n--- Menu ---\n");
printf("1. Gagner des points\n");
printf("2. Perdre des points\n");
printf("3. Afficher le score\n");
printf("4. Quitter le jeu\n");
printf("Votre choix : ");
}

int main() {
int score = 0; // Initialisation du score
int choix;
int points;


do {
afficherMenu();
scanf("%d", &choix);

switch (choix) {
case 1:
score += points; // Ajouter des points
printf("Vous avez gagné %d points !\n", points);
break;
case 2:
score -= points; // Retirer des points
printf("Vous avez perdu %d points.\n", points);
break;
case 3:
printf("Score actuel : %d\n", score);
break;
case 4:
printf("Merci d'avoir joué ! Score final : %d\n", score);
break;

return 0;
}
